<UserControl x:Class="WPSampleApp.HeaderFooterGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderTextBlock" Grid.Row="0" FontSize="{StaticResource PhoneFontSizeNormal}"/>
        <TextBlock x:Name="FooterTextBlock" Grid.Row="2" FontSize="{StaticResource PhoneFontSizeNormal}"/>
        
        <StackPanel Grid.Row="1" x:Name="ContentStackPanel" />
        
    </Grid>
</UserControl>
